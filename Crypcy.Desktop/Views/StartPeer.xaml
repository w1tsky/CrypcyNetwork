<UserControl x:Class="Crypcy.Desktop.Views.StartPeer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crypcy.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#2c2f33">

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" MinHeight="300" MinWidth="400" VerticalAlignment="Center" >

            <Label Content="Start Peer" Foreground="White" HorizontalAlignment="Left" FontSize="30" Margin="20"/>

            <!--<Label Content="Peer Name:" Foreground="White" HorizontalAlignment="Left"/>
            <TextBox Name="PeerNameBox" Height="25"  Foreground="White"/>-->

            <Label  Content="Server Port:" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <TextBox Name="PortBox"  Height="25"    Foreground="White"/>
            
            <Button Content="Start Peer" HorizontalAlignment="Center" Click="StartPeer_Btn"   Margin="30"/>
            <Button Content="Stop Peer" HorizontalAlignment="Center" Click="StopPeer_Btn"   Margin="30"/>
        </StackPanel>


    </Grid>
</UserControl>
